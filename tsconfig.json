{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
        "DOM",
        "ESNext"
    ],
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
